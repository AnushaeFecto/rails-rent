          <div class="card-container">

            <div class="card-button-row">
              <div><%= link_to "View", item_path(item), class: "btn-general"%>
              </div>
              <div><%= link_to "Edit", edit_item_path(item), class: "btn-general"%>
              </div>
              <div><%= link_to "Delete", item_path(item), class: "btn-general", method: :delete, data: { confirm: "Are you sure?" } %></div>
            </div>

            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
