







<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address%>
    <%= f.input :email %>
    <%= f.input :photo, required: true %>
    <%= f.input :photo_cache, as: :hidden %>
   </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>
