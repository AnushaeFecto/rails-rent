<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :size %>
    <%= f.input :price %>
    <%= f.input :category, collection: Item::CATEGORIES %>
    <%= f.input :description %>
  </div>

  <%= f.input :photo, required: true %>
  <%= f.input :photo_cache, as: :hidden %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
