
<%#= cl_image_tag("image.png", width: 400, height: 300, crop: :fill) %>

<center><h1>All items</h1></center>
<div class="container">
  <div class="row">
    <% @items.each do |item| %>
  <div class="col-xs-12 col-sm-4">
    <div class="new-card" style="background-image: url('https://images.unsplash.com/photo-1508742345712-0656a285ac27?ixlib=rb-0.3.5&s=882cfaaf43d4b5e928e5eb3ddb0c10ac&auto=format&fit=crop&w=2734&q=80');">
  </div>
    <% if policy(item).show? %>
      <center><%= link_to "Show", item %></center>
    <% end %>
  </div>
  <% end %>
</div>
</div>
<p><%= link_to 'Create new item', new_item_path %></p>


