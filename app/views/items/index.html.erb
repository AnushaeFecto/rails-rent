<h1>All items</h1>

<% @items.each do |item| %>
  <p><%= link_to item.description, item_path(item) %></p>
<% end %>

<h3><%= link_to 'Create new item', new_item_path %></h3>




<!-- Hi Velina, Anushae: the below items are the code you need for the update, show, edit, buttons/links, due to Pundit -->
<% @items.each do |item| %>
  <% if policy(item).edit? %>
    <%= link_to "Update", edit_item_path(item) %>
  <% end %>
  <% if policy(item).show? %>
    <%= link_to "Show", item %>
  <% end %>
  <% if policy(item).destroy? %>
    <%= link_to "Destroy", item, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
<% end %>
